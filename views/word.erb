<h1>Definition of <%= @word.vocab() %></h1>

<ul>
  <% @word.names().each() do |name| %>
    <li><a href="/definitions/<%= name.id() %>"><%= name.description() %></a></li>
  <% end %>
</ul>

<form action="/definitions" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

  <label for='define'>Definition:</label>
  <input id='define' name='define' type='text'>

  <button type="submit" class="btn btn-info">Add</button>
</form>

<a href="/">Home</a>
